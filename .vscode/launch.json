{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "启动后端服务",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/server.js",
      "cwd": "${workspaceFolder}/backend",
      "runtimeExecutable": "node",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "outputCapture": "std"
    },
    {
      "name": "启动前端服务",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/server.js",
      "cwd": "${workspaceFolder}/backend",
      "runtimeExecutable": "node",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "outputCapture": "std",
      "preLaunchTask": "Start Frontend"
    },
    {
      "name": "调试后端",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "timeout": 30000,
      "localRoot": "${workspaceFolder}/backend",
      "remoteRoot": "${workspaceFolder}/backend",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "调试前端",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:10298",
      "webRoot": "${workspaceFolder}/wwwroot",
      "sourceMaps": true,
      "timeout": 30000
    }
  ],
  "compounds": [
    {
      "name": "启动前后端",
      "configurations": ["启动后端服务", "调试前端"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "all"
      }
    }
  ]
}