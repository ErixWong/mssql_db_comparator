# 数据库连接配置示例
# 复制此文件为 .env 并填入实际值

# 服务器配置
PORT=3000
NODE_ENV=development

# 数据库 A 配置
DB_A_HOST=localhost
DB_A_USERNAME=sa
DB_A_PASSWORD=YourPassword
DB_A_DATABASE=YourDatabaseA
DB_A_PORT=1433
DB_A_INSTANCE=
DB_A_ENCRYPT=false
DB_A_TIMEOUT=60

# 数据库 B 配置
DB_B_HOST=localhost
DB_B_USERNAME=sa
DB_B_PASSWORD=YourPassword
DB_B_DATABASE=YourDatabaseB
DB_B_PORT=1433
DB_B_INSTANCE=
DB_B_ENCRYPT=false
DB_B_TIMEOUT=60

# 日志配置
LOG_LEVEL=debug
LOG_FILE=debug.log

# 其他配置
MAX_CONNECTIONS=10
CONNECTION_TIMEOUT=30000